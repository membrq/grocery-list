<!--This page is where users can edit the attributes of the items on their grocery list.-->
<h2>Edit Item</h2>

<div class="row">
    <div class="col-md-8">
        <p>Update the item.</p><br />

        <%= form_with model: @item do |f| %>
            <div class="form-group">
                <%= f.label :name %>
                <%= f.text_field :name, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :quantity %>
                <%= f.number_field :quantity, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :item_type %>
                <%= f.text_field :item_type, autofocus: true, class: 'form-control' %>
            </div>
            <div class="form-group">
                <%= f.label :price %>
                <%= f.number_field :price, :step => 0.01 %>
            </div>
            <div class="form-group">
                <%= f.label :purchased %>
                <%= f.check_box :purchased %>
            </div>
            <div class="form-group">
                <%= f.submit "Save Changes", class: 'btn btn-success' %>
            </div><br />
        <% end %>
    </div>
 </div>